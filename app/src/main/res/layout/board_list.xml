<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:layout_marginTop="20dp"
    android:maxHeight="80dp">


    <ImageView
        android:id="@+id/iv_main_image"
        android:layout_width="80dp"
        android:layout_height="80dp" />


    <TextView
        android:id="@+id/boardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="90dp"
        android:text="제목" />

    <TextView
        android:id="@+id/boardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boardTitle"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="27dp"
        android:text="이름 :" />


    <TextView
        android:id="@+id/boardMajor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boardTitle"
        android:layout_alignStart="@+id/iv_main_image"
        android:layout_alignLeft="@+id/iv_main_image"
        android:layout_marginStart="91dp"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="4dp"
        android:text="학과" />

    <TextView
        android:id="@+id/boardDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:text="9999.12.31 12:00"
        android:textColor="@android:color/darker_gray"
        android:textSize="9dp"
        android:gravity="right"/>


    <Button
        android:id="@+id/showDetailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="#1B81FE"
        android:text="자세히 보기"
        android:textColor="@android:color/white"
        android:textStyle="bold|normal" />

</RelativeLayout>
